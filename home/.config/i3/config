# vim:filetype=i3config
# i3 config file (v4)

###########################
# General i3 configs
###########################
# Use win as mod. Win and alt are switched via xmodmap, hence you use alt.
set $mod Mod4
# Editor
set $editor vim
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# font
font pango:Ubuntu Regular 10, Font Awesome 6 Free 10, Symbols Nerd Font 10

# Gaps configuration
gaps inner 8
gaps outer 0
gaps horizontal 0
gaps vertical 0

# Go back to previous workspace pressing the same move combination
workspace_auto_back_and_forth yes

# Unconstrained float size
floating_minimum_size -1 x -1
floating_maximum_size -1 x -1

# Split orientation
default_orientation horizontal

###########################
# Appearance
###########################

###########################
# Workspaces
###########################
set $w1 "1:  "
set $w2 "2:  "
set $w3 "3:  "
set $w4 "4:  "
