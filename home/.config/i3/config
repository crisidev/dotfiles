set $w6 "6:  "
set $w7 "7:  "
set $w8 "8:  "
set $w9 "9:  "
set $w10 "10:  "
set $w11 "11:  "
set $w12 "12:  "
set $w13 "13:  "

###########################
# Marks
###########################
show_marks yes

