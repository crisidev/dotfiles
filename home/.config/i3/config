# Startup commands
###########################
exec_always --no-startup-id "$HOME/.bin/import-gsettings gtk-theme:gtk-theme-name icon-theme:gtk-icon-theme-name cursor-theme:gtk-cursor-theme-name font-name:gtk-font-name"

exec "systemctl --user start wm.target"
exec --no-startup-id "zsh -c 'GDK_BACKEND=x11 /usr/bin/ulauncher --hide-window'"

# Exec always
exec_always --no-startup-id "feh --bg-fill $HOME/Pictures/wallpapers/fishing.jpeg"
