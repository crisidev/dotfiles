###########################
# HW keys
###########################
# Volume (Fn-F(8-9-10))
bindsym XF86AudioPlay exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym XF86AudioNext exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym XF86AudioPrev exec --no-startup-id "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.previous"
bindsym Mod1+F10 exec --no-startup-id $psst pactl set-source-mute @DEFAULT_SOURCE@ toggle"

# Sleep (Fn-F1)
bindsym XF86Sleep exec --no-startup-id "$HOME/.bin/i3exit suspend"

# Monitor
bindsym XF86Display exec --no-startup-id "$HOME/.bin/i3monitor duplicate all"

# Print focused window
bindsym Print exec --no-startup-id "flameshot gui"

###########################
# i3 bindings
###########################
# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart 

# Reload i3 config 
bindsym $mod+Shift+c reload

# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "gnome-session-quit"

# Ulauncher toogle
bindsym $mod+space exec --no-startup-id "ulauncher-toggle"

# Start a terminal
bindsym $mod+Return exec --no-startup-id "$HOME/.bin/kitty --detach"

# Start a floating terminal
bindsym $mod+Shift+Return exec --no-startup-id "$HOME/.bin/kitty --name floating --detach"

# Start a file browser:
bindsym Control+space exec --no-startup-id "nautilus && i3-msg move position center"

# Kill focused window
bindsym $mod+q kill
bindsym --release $mod+Shift+q exec --no-startup-id xkill

# Focus parent
bindsym $mod+k exec --no-startup-id $HOME/.bin/mff focus parent

# Paste from selection
bindsym $mod+Shift+slash exec --no-startup-id xdotool click 2

# Split in horizontal orientation
bindsym $mod+Shift+h split v

# Split in vertical orientation
bindsym $mod+Shift+v split h

# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# Change container layout (bsp, stacked, tabbed)
bindsym $mod+b layout splith
# bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed

# Toggle tiling / floating
bindsym $mod+backslash floating toggle

# Hide and restore windoes
bindsym $mod+x [floating] move scratchpad
bindsym $mod+Shift+x [floating] scratchpad show

# IDE
bindsym $mod+e exec --no-startup-id "$HOME/.bin/ide toggle"
bindsym $mod+r focus mode_toggle

###########################
# i3 movements
###########################
# Switch to workspace
bindsym $mod+Escape exec --no-startup-id $HOME/.bin/mff workspace $w1
bindsym $mod+F2 exec --no-startup-id $HOME/.bin/mff workspace $w2 
bindsym $mod+F1 exec --no-startup-id $HOME/.bin/mff workspace $w3
bindsym $mod+1 exec --no-startup-id $HOME/.bin/mff workspace $w4
bindsym $mod+2 exec --no-startup-id $HOME/.bin/mff workspace $w5
bindsym $mod+4 exec --no-startup-id $HOME/.bin/mff workspace $w6 
bindsym $mod+3 exec --no-startup-id $HOME/.bin/mff workspace $w9
bindsym $mod+F4 exec --no-startup-id $HOME/.bin/mff workspace $w7
bindsym $mod+F3 exec --no-startup-id $HOME/.bin/mff workspace $w8
bindsym $mod+5 exec --no-startup-id $HOME/.bin/mff workspace $w10
bindsym $mod+F5 exec --no-startup-id $HOME/.bin/mff workspace $w11
bindsym $mod+6 exec --no-startup-id $HOME/.bin/mff workspace $w12
bindsym $mod+F6 exec --no-startup-id $HOME/.bin/mff workspace $w13

# Move focused workspace to output
bindsym $mod+Mod1+plus exec --no-startup-id $HOME/.bin/mff move workspace to output DP-2-1
bindsym $mod+Mod1+BackSpace exec --no-startup-id $HOME/.bin/mff move workspace to output DP-2-2
bindsym $mod+Mod1+Home exec --no-startup-id $HOME/.bin/mff move workspace to output eDP-1

# Move focused container to workspace
bindsym $mod+Shift+Escape exec --no-startup-id $HOME/.bin/mff move container to workspace $w1 
bindsym $mod+Shift+F2 exec --no-startup-id $HOME/.bin/mff move container to workspace $w2
bindsym $mod+Shift+F1 exec --no-startup-id $HOME/.bin/mff move container to workspace $w3
bindsym $mod+Shift+1 exec --no-startup-id $HOME/.bin/mff move container to workspace $w4
bindsym $mod+Shift+2 exec --no-startup-id $HOME/.bin/mff move container to workspace $w5
bindsym $mod+Shift+4 exec --no-startup-id $HOME/.bin/mff move container to workspace $w6
bindsym $mod+Shift+3 exec --no-startup-id $HOME/.bin/mff move container to workspace $w9
bindsym $mod+Shift+F4 exec --no-startup-id $HOME/.bin/mff move container to workspace $w7
bindsym $mod+Shift+F3 exec --no-startup-id $HOME/.bin/mff move container to workspace $w8
bindsym $mod+Shift+5 exec --no-startup-id $HOME/.bin/mff move container to workspace $w10
bindsym $mod+Shift+F5 exec --no-startup-id $HOME/.bin/mff move container to workspace $w11
bindsym $mod+Shift+6 exec --no-startup-id $HOME/.bin/mff move container to workspace $w12
bindsym $mod+Shift+F6 exec --no-startup-id $HOME/.bin/mff move container to workspace $w13

# Focus window
bindsym $mod+Tab exec --no-startup-id $HOME/.bin/i3cycle
bindsym $mod+Left exec --no-startup-id $HOME/.bin/mff "focus mode_toggle focus left"
bindsym $mod+Down exec --no-startup-id $HOME/.bin/mff "focus mode_toggle focus down"
bindsym $mod+Up exec --no-startup-id $HOME/.bin/mff "focus mode_toggle focus up"
bindsym $mod+Right exec --no-startup-id $HOME/.bin/mff "focus mode_toggle focus right"

# Move windows
bindsym $mod+Shift+Left exec --no-startup-id $HOME/.bin/i3window swap left
bindsym $mod+Shift+Down exec --no-startup-id $HOME/.bin/i3window swap down
bindsym $mod+Shift+Up exec --no-startup-id $HOME/.bin/i3window swap up
bindsym $mod+Shift+Right exec --no-startup-id $HOME/.bin/i3window swap right
# bindsym --whole-window Control+button3 mark --add quickswap
# bindsym --whole-window Control+Shift+button3 unmark quickswap
# bindsym --whole-window Control+button2 swap with mark quickswap; [con_mark="quickswap"] focus; unmark quickswap

# Resize mode
bindsym $mod+Mod1+Left exec --no-startup-id $HOME/.bin/i3resize "Left" "5 px or 5 ppt"
bindsym $mod+Mod1+Right exec --no-startup-id $HOME/.bin/i3resize "Right" "5 px or 5 ppt"
bindsym $mod+Mod1+Up exec --no-startup-id $HOME/.bin/i3resize "Up" "5 px or 5 ppt"
bindsym $mod+Mod1+Down exec --no-startup-id $HOME/.bin/i3resize "Down" "5 px or 5 ppt"


###########################
# Power mode
###########################
bindsym XF86PowerOff mode " [l]ock [e]xit [s]uspend [h]ibernate [r]eboot [p]oweroff"
bindsym $mod+Mod1+p mode " [l]ock [e]xit [s]uspend [h]ibernate [r]eboot [p]oweroff"
mode " [l]ock [e]xit [s]uspend [h]ibernate [r]eboot [p]oweroff" {
    bindsym l mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3exit lock
    bindsym e mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3exit logout
    bindsym s mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3exit suspend
    bindsym h mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3exit hibernate
    bindsym r mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3exit reboot
    bindsym p mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3exit shutdown
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

###########################
# Monitor mode
###########################
bindsym $mod+Mod1+m mode " [a]uto [l]aptop [h]ome [w]ork [d]uplicate [D]uplicate_all"
mode " [a]uto [l]aptop [h]ome [w]ork [d]uplicate [D]uplicate_all" {
    bindsym a mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3monitor auto
    bindsym l mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3monitor laptop
    bindsym h mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3monitor home
    bindsym w mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3monitor work
    bindsym d mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3monitor duplicate
    bindsym D mode "default", exec --no-startup-id DISPLAY=":0" XAUTHORITY="$HOME/.Xauthority" $HOME/.bin/i3monitor duplicate all
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

###########################
# i3blocks bar
###########################
bar {
    tray_output none
    font pango:Inter Regular, DejaVu Sans Mono for Powerline, Font Awesome 5 Free 9
    position top
    status_command source $HOME/.zsh_secrets && $HOME/.cargo/bin/i3status-rs $HOME/.config/i3/top.toml
    strip_workspace_numbers yes
    workspace_buttons yes
    height 24
    colors {
        separator            #666666
        background           #222222
        statusline           #dddddd
        focused_workspace    #7789cb #7789cb #ffffff
        active_workspace     #7789cb #7789cb #ffffff
        inactive_workspace   #333333 #333333 #888888
        urgent_workspace     #918ad2 #918ad2 #ffffff
    }
}

bar {
    output primary
    tray_output primary
    font pango:Inter Regular, DejaVu Sans Mono for Powerline, Font Awesome 5 Free 9
    status_command source $HOME/.zsh_secrets && $HOME/.cargo/bin/i3status-rs $HOME/.config/i3/bottom.toml
    position bottom
    workspace_buttons no
    height 26
    colors {
        separator            #666666
        background           #222222
        statusline           #dddddd
        focused_workspace    #7789cb #7789cb #ffffff
        active_workspace     #7789cb #7789cb #ffffff
        inactive_workspace   #333333 #333333 #888888
        urgent_workspace     #918ad2 #918ad2 #ffffff
    }
}


