#!/usr/bin/env bash

source "$HOME/.config/crisidev-common"
declare -a arr=(
  "workspace 1: shell, move workspace to output HDMI-A-0"
  "workspace 2: www, move workspace to output HDMI-A-0"
  "workspace 3: irc, move workspace to output eDP"
  "workspace 4: videoconf, move workspace to output eDP"
  "workspace 5: chime, move workspace to output eDP"
  "workspace 6: mail, move workspace to output HDMI-A-0"
  "workspace 7: calendar, move workspace to output HDMI-A-0"
  "workspace 8: chat, move workspace to output eDP"
  "workspace 9: slack, move workspace to output eDP"
  "workspace 10: outlook, move workspace to output HDMI-A-0"
  "workspace 11: spotify, move workspace to output HDMI-A-0"
  "workspace 12: quip, move workspace to output HDMI-A-0"
  "workspace 13: var1, move workspace to output eDP"
  "workspace 9: slack"
  "workspace 2: www"
)
i3_msg_dispatcher "${arr[@]}"

imwheel -k

set_audio alsa_input.usb-21102019_THRONMAX_PULSE_MICROPHONE-00.iec958-stereo alsa_output.pci-0000_04_00.1.hdmi-stereo

xset -dpms
restart_night_light

finish_autorandr_switch home
