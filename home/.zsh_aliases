# bash aliases
# alias ls="ls --color -Fh"
# alias ls="lsd --icon never -F"
alias ls="lsfunc"
alias l="ls -1"
alias ll="ls -lh"
alias la="ls -a"
alias lt="ls -lh -s time"
alias lla="ls -alh"
alias lg="ls -l --git"
alias cp="cp -v"
alias mv="mv -v"
alias grepp="grep * --color=auto -H -n -r -e "
alias grep="grep --color=auto"
alias starwars="telnet towel.blinkenlights.nl"
alias brackets="nl -ba $* | egrep --color=always '[{}]'"
alias removeall="sed -i /$*/d **/*(.)"
alias j="jump"
alias lc="colorls"
alias py="noglob py"
alias calc="noglob calc"
alias ldapper="python ~/crisidev/software/ldapper/ldapper.py"
alias ack="rg -L --hidden --stats --pretty -z"
alias kinitweek='kinit -f -l 36000 -r 604800'
alias pbc="xclip"
alias pass=gopass
alias nethogs="sudo nethogs"
alias cat="bat -p"
alias trans_disable="transset 2 -x 2"
alias open="xdg-open"
alias o="xdg-open"
alias vim-packer-sync="rm -f ~/.config/lvim/plugin/packer_compiled.lua && vim -c 'autocmd User PackerComplete quitall' -c 'PackerSync'"
alias vim-packer-update="vim -c 'autocmd User PackerComplete quitall' -c 'PackerUpdate'"
alias userctl="systemctl --user"
alias userjournal="journalctl --user"
